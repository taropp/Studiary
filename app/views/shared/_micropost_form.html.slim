.modal-dialog[role="document"]
  .modal-content
    = form_for(@micropost) do |f|
      = render 'shared/error_messages', object: f.object
      .modal-body
        .form-group.field.tweet
          = f.text_area :content, placeholder: "記入欄"
        = f.file_field :picture, accept: '/jpg/png'
      .modal-footer.actions
        = f.submit "投稿", class: "btn btn-primary"
    script[type="text/javascript"]
      |  $('#micropost_picture').bind('change', function() { var size_in_megabytes = this.files[0].size/1024/1024; if (size_in_megabytes > 5) { alert('5MB以下にして下さい。'); } }); 
