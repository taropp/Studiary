<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group field tweet">
      <%= f.text_area :content, class: "post-content", placeholder: "記入欄：10文字以内" %>
    </div>
    <%= f.file_field :picture, accept: '/jpeg/png' %>
    <div class="actions">
      <%= f.submit "投稿", class: "btn btn-primary post-sub" %>
    </div>
<% end %>
<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('5MB以下にして下さい。');
    }
  });
</script>
