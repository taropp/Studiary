<% provide(:title, @user.name) %>
<%= gravatar_for @user %>
<p><%= @user.name %></p>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<% if current_user == @user %>
  <%= link_to 'プロフィール変更', edit_user_registration_path %>
<% end %>
<div>
  <%= render 'follow_form' %>
  <% if @user.microposts.any? %>
    <h3>投稿一覧 (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= paginate @microposts %>
  <% end %>
</div>